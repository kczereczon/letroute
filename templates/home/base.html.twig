<!DOCTYPE html>
<html class="h-full">
<head>
    <meta charset="UTF-8">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <title>{% block title %}Letroute - narzędzie do planowania tras{% endblock %}</title>

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-B091DDS5SK"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-B091DDS5SK');
    </script>

    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5090101079097250"
            crossorigin="anonymous"></script>

    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <style>
        html, body {
            height: 100vh;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .full-height {
            height: calc(100vh - 20px); /* Subtract the height of the element with class "h-10" */
        }

        .full-height-with-padding {
            height: calc(100vh - 20px - 3rem - 88px);
        }
    </style>
</head>
</head>
<body>
